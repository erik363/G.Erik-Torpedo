<Window x:Class="Torpedo3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Torpedo3"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="800" ResizeMode="NoResize">
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Background="AliceBlue">
                <Button Tag="MyButton2" Click="AIPage" MinWidth="100" MinHeight="20" Margin="10,0,0,0" Content="Single Player"/>
                <Button Tag="MyButton3" Click="PvP_Page" MinWidth="100" MinHeight="20" Margin="10,0,0,0" Content="Multi Player"/>
                <Button Tag="MyButton4" Click="ScorePage" MinWidth="100" MinHeight="20" Margin="10,0,0,0" Content="Records"/>
            </StackPanel>
            <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
        </StackPanel>
        
    </Grid>
    
</Window>
