<Page x:Class="Torpedo3.ScoreBoard_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Torpedo3"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ScoreBoard_Page">

    <Grid>
        <ListView HorizontalAlignment="Left" Height="416" Margin="30,34,0,0" VerticalAlignment="Top" Width="596" x:Name="lista">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name1" DisplayMemberBinding="{Binding Name1}"/>
                    <GridViewColumn Header="Name2" DisplayMemberBinding="{Binding Name2}"/>
                    <GridViewColumn Header="Rounds" DisplayMemberBinding="{Binding Rounds}"/>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Page>
